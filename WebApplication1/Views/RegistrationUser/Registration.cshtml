@model UserRegistrationModel


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<body>
    <div class="reg-form">
        <form asp-action="Registration" asp-controller="RegistrationUser" method="post">

            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>

            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>

            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>

            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>

            <label asp-for="Age"></label>
            <input asp-for="Age" />
            <span asp-validation-for="Age"></span>

            <label asp-for="isAgree"></label>
            <input asp-for="isAgree" />
            <span asp-validation-for="isAgree"></span>

            <input type="submit" value="Registration" class="btn-reg" />
        </form>
    </div>

    @* {{-- ДОБАВЛЕНО: Для включения клиентской валидации (jQuery) --}}
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    } *@
</body>
</html>